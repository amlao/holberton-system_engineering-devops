#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me redirects to another page
sudo apt-get install -y nginx
fork="/redirect_me"
mewtwo="/etc/nginx/sites-available/default"
ditto="https://www.youtube.com/watch?v=QH2-TGUlwu4"
sudo sed -i "location $fork $ditto;" "$mewtwo"
sudo service nginx reload
